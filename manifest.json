{
  "manifest_version": 3,
  "name": "Twitter Markdown Viewer",
  "version": "1.0.0",
  "description": "Automatically render Markdown in tweets on X (Twitter)",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["lib/marked.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
